<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns:m="sap.m"
    controllerName="ui5.mock.controller.EmployeeDetails">
    
    <uxap:ObjectPageLayout id="objectPage">
        <uxap:headerTitle>
            <uxap:ObjectPageHeader objectTitle="{i18n>empManagementPortal}" />
        </uxap:headerTitle>
        
        <uxap:sections>
            <uxap:ObjectPageSection>
                <uxap:ObjectPageSubSection>
                    <m:VBox>
                            <m:HBox>
                            <m:Label text="{i18n>name} : " class="sapUiSmallMarginTop" />
                            <m:Text text="{employeesModel>FirstName} {employeesModel>LastName}" class="sapUiSmallMarginTop"/>
                            </m:HBox>
                            <m:HBox>
                            <m:Label text="{i18n>eid} : " class="sapUiSmallMarginTop"/>
                            <m:Text text="{employeesModel>EmployeeID}" class="sapUiSmallMarginTop"/>
                            </m:HBox>
                            <m:HBox>
                            <m:Label text="{i18n>email} : " class="sapUiSmallMarginTop"/>
                            <m:Text text="{employeesModel>Email}" class="sapUiSmallMarginTop"/>
                            </m:HBox>
                    </m:VBox>
                </uxap:ObjectPageSubSection>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection title="{i18n>details}">
                <uxap:ObjectPageSubSection>
                    <m:VBox>
                        <m:HBox>
                        <m:Label text="{i18n>phone} : " class="sapUiSmallMarginTop" />
                        <m:Text text="{employeesModel>Phone}" class="sapUiSmallMarginTop"/>
                        </m:HBox>
                        <m:HBox>
                        <m:Label text="{i18n>status} : " class="sapUiSmallMarginTop"/>
                        <m:Text text="{employeesModel>Status}" class="sapUiSmallMarginTop"/>
                        </m:HBox>
                        <m:HBox>
                        <m:Label text="{i18n>department} : " class="sapUiSmallMarginTop"/>
                        <m:Text text="{employeesModel>Department}" class="sapUiSmallMarginTop"/>
                        </m:HBox>
                        <m:HBox>
                        <m:Label text="{i18n>position} : " class="sapUiSmallMarginTop"/>
                        <m:Text text="{employeesModel>Position}" class="sapUiSmallMarginTop"/>
                        </m:HBox>
                        <m:HBox>
                        <m:Label text="{i18n>hireDate} : " class="sapUiSmallMarginTop"/>
                        <m:Text text="{employeesModel>HireDate}" class="sapUiSmallMarginTop"/>
                        </m:HBox>
                        <m:HBox>
                        <m:Label text="{i18n>salary} : " class="sapUiSmallMarginTop"/>
                        <m:Text text="{employeesModel>Salary}" class="sapUiSmallMarginTop"/>
                        </m:HBox>
                        <m:HBox>
                        <m:Label text="{i18n>address} : " class="sapUiSmallMarginTop"/>
                        <m:Text text="{employeesModel>Address/Street}, {employeesModel>Address/City}, {employeesModel>Address/ZipCode}, {employeesModel>Address/Country}" class="sapUiSmallMarginTop"/>
                        </m:HBox>
                    </m:VBox>
                </uxap:ObjectPageSubSection>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>
    
</mvc:View>
