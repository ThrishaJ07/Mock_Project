<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    controllerName="ui5.mock.controller.Dashboard">
     <Page 
        id="dashboardPage"
        title="{i18n>empManagementPortal}"  
        showNavButton="false">
        <headerContent>
            <Toolbar>
                  <ToolbarSpacer/>
                  <Text id="welcomeMessage" text="{i18n>welcomeMessage} {userName}"/>
            </Toolbar>
         </headerContent>
         <content>
            <VBox class="sapUiResponsiveMargin" fitContainer="true">
               <Panel>
                  <content>
                     <HBox class="sapUiResponsiveMargin">
                        <VBox>
                        <Label text="{i18n>name}" />
                        <Input id="nameInput" width="200px" placeholder="Enter name" liveChange="onFilter" class="sapUiSmallMarginEnd"/>
                        </VBox>
                        <VBox>
                        <Label text="{i18n>eid}" />
                        <Input id="eidInput" width="200px" placeholder="Enter Employee ID" liveChange="onFilter" class="sapUiSmallMarginEnd"/>
                        </VBox>
                        <VBox>
                         <Label text="{i18n>status}" />
                           <Select id="statusInput" width="200px" change="onFilter" class="sapUiSmallMarginEnd">
                                 <items>
                                    <core:Item key="" text="All" />
                                    <core:Item key="Active" text="Active" />
                                    <core:Item key="Inactive" text="Inactive" />
                                 </items>
                           </Select>
                        </VBox>
                        <HBox class="sapUiSmallMarginEnd" alignItems="End">
                           <Button text="{i18n>filter}" press="onFilter" width="150px" />
                        </HBox>
                     </HBox>
                     <HBox justifyContent="End" class="sapUiSmallMarginTop">
                        <Button text="{i18n>add}" type="Accept" class="sapUiSmallMarginEnd" press="onAddEmployee" width="150px"/>
                        <Button text="{i18n>export}" type="Emphasized" class="sapUiSmallMarginEnd" press="onExport" width="150px"/>
                     </HBox>
                  </content>
               </Panel>
               <Table id="employeeTable" items="{employeesModel>/employees}">
                     <columns>
                        <Column>
                           <Text text="{i18n>name}" />
                        </Column>
                        <Column>
                           <Text text="{i18n>eid}" />
                        </Column>
                        <Column>
                           <Text text="{i18n>email}" />
                        </Column>
                        <Column>
                           <Text text="{i18n>status}" />
                        </Column>
                        <Column>
                           <Text text="{i18n>delete}" />
                        </Column>
                     </columns>
                     <items>
                        <ColumnListItem type="Active" press="onEmployeePress">
                           <cells>
                              <Text text="{employeesModel>FirstName} {employeesModel>LastName}" />
                              <Text text="{employeesModel>EmployeeID}" />
                              <Text text="{employeesModel>Email}" />
                              <Text text="{employeesModel>Status}" />
                              <Button text="{i18n>delete}" type="Reject" press="onDelete" />
                           </cells>
                        </ColumnListItem>
                     </items>
               </Table>
            </VBox>
      </content>
      <!-- Dialog for Adding Employee -->
      <Dialog id="addEmployeeDialog" title="Add Employee" draggable="false" resizable="false">
            <VBox class="sapUiResponsiveMargin" id="personalInfoBox" visible="true">
               <!-- Personal Info Section -->
               <VBox>
                     <Label text="First Name" />
                     <Input id="firstNameInput" placeholder="Enter First Name" />
               </VBox>
               
               <VBox>
                     <Label text="Last Name" />
                     <Input id="lastNameInput" placeholder="Enter Last Name" />
               </VBox>
            </VBox>

            <VBox class="sapUiResponsiveMargin" id="contactInfoBox" visible="false">
               <!-- Contact Info Section -->
               <VBox>
                     <Label text="Phone Number" />
                     <Input id="phoneInput" placeholder="Enter Phone Number" />
               </VBox>

            <VBox>
                     <Label text="Email" />
                     <Input id="emailInput" placeholder="Enter Email" />
               </VBox>
            </VBox>

            <!-- Begin Button for Next and Submit -->
            <HBox justifyContent="End" class="sapUiSmallMarginTop">
               <Button id="nextButton" text="Next" press="onNextStep" class="sapUiSmallMarginEnd"/>
               <Button id="submitButton" text="Submit" press="onSubmitAddEmployee" visible="false" class="sapUiSmallMarginEnd"/>
               <Button text="Cancel" press="onCancelAddEmployee"/>
            </HBox>
         
      </Dialog>
   </Page>
</mvc:View>